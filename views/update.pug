doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/css/css_update.css')
  body
    .header
      a.btn(href='/') Home
    h1 Update Custom Object Form | Integrating With HubSpot I Practicum.
    .form-card
      form(action='/update-cobj', method='POST')
        input(type='hidden', name='id', value=objectData.hs_object_id)
        .form-group
          label(for='name') Name:
          input(type='text', id='name', name='name', value=objectData.name, required)
          .form-group
          label(for='test') Test Field:
          input(type='text', id='name', name='test', value=objectData.test, required)
        .form-group
          label(for='details') Details:
          input(type='text', id='details', name='details', value=objectData.details, required)
        .form-group
          label(for='amount') Amount:
          input(type='number', id='amount', name='amount', value=objectData.amount, required)
        .form-group
          input.btn(type='submit', value='Update Object')
